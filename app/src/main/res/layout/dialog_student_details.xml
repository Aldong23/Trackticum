<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pageGrey"
    android:paddingVertical="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivStudentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/deepTeal"
        app:riv_border_width="5dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_rounded_bold"
        android:text="Full Name"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivStudentImage"
        app:layout_constraintStart_toStartOf="@+id/ivStudentImage"
        app:layout_constraintTop_toBottomOf="@+id/ivStudentImage" />

    <TextView
        android:id="@+id/tvDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Department"
        android:fontFamily="@font/sf_rounded_regular"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvFullName"
        app:layout_constraintStart_toStartOf="@+id/tvFullName"
        app:layout_constraintTop_toBottomOf="@+id/tvFullName" />

    <TextView
        android:id="@+id/tvTimeInOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time In/Out"
        android:fontFamily="@font/sf_rounded_regular"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvDepartment"
        app:layout_constraintStart_toStartOf="@+id/tvDepartment"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartment"/>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Timestamp"
        android:fontFamily="@font/sf_rounded_regular"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeInOut"
        app:layout_constraintStart_toStartOf="@+id/tvTimeInOut"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeInOut" />

</androidx.constraintlayout.widget.ConstraintLayout>
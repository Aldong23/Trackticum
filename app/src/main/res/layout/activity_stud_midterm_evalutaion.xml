                        android:id="@+id/b10_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/b10_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/b10_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/b10_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />
                </RadioGroup>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Describe the student’s strong points:">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/strong_points_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Multiline Field for Areas of Improvement -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Describe the student’s areas that need improvements:">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/improvements_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Checkbox for Discussion Confirmation -->
            <CheckBox
                android:id="@+id/discussed_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="This report has been discussed with the student:" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Submit"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
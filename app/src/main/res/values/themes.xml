<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trackticum" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepTeal</item>
        <item name="colorPrimaryVariant">@color/darkerTeal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deepTeal</item>
        <item name="colorSecondaryVariant">@color/darkerTeal</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>

        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
    </style>

    <!-- No Action bar  -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepTeal</item>
        <item name="colorPrimaryVariant">@color/darkerTeal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/darkerOrange</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!--  Font  -->
    <style name="BoldText">
        <item name="android:fontFamily">@font/sf_rounded_bold</item>
    </style>
    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_rounded_regular</item>
    </style>
    <style name="SemiBoldText">
        <item name="android:fontFamily">@font/sf_rounded_semibold</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/whiteTeal</item>
        <item name="itemIconTint">@color/darkerTeal</item>
        <item name="itemTextColor">@color/darkerTeal</item>
        <item name="itemRippleColor">@color/lighterTeal</item>
    </style>

    <style name="CustomTonalButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/lighterTeal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_rounded_semibold</item>
    </style>


    <style name="Theme.Trackticum" parent="Base.Theme.Trackticum" />
</resources>